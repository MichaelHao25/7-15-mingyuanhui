 filter:alpha(opacity=40); 针对 IE8 以及更早的版本 */
body
	font-size 16Px

.clear
	zoom 1

.clear:after
	display block
	clear both
	content ''

.hcl-module-7-15
	.sub-nav
		border-bottom 1px solid #cdcdcd

		.wid
			text-align center
			font-size 0

			a
				position relative
				display inline-block
				margin 0 20px
				height 45px
				color #4f4f4f
				font-size 16px
				line-height 45px
				transition 0.3s

				&:after
					position absolute
					right 0
					bottom -1px
					left 0
					height 6px
					background transparent
					content ''
					transition 0.3s

				&:hover
					color #c4a66a

					&:after
						background #c4a66a

	.theme-style-list
		padding-top 20px

		.item
			margin-top 65px

			.pic
				img
					display block
					width 100%

			.content
				padding-top 25px
				color #100f11
				text-transform uppercase
				font-size 16px
				line-height 26px

				.cc4a66a
					color #c4a66a

				.ce00524
					color #e00524

				a
					color inherit
	.brand-hand
		padding-bottom 15px
		.list
			margin-left -2%
			.item
				position relative
				margin-bottom 2%
				width 48%
				margin-left 2%
				overflow hidden
				&:hover
					.layout
						transform translate(0,0)
				img
					display block
					width 100%
				.layout
					position absolute
					bottom 0
					left 0
					right 0
					font-size 22px
					color #ffffff
					background rgba(#000,0.59)
					line-height 74px
					text-align center
					transition 0.3s
					transform translate(0,100%)

	.brand-advantage
		padding-bottom 50px
		background #efede9
		.list
			margin-left -3%
			.item
				width 17%
				height 130px
				margin-left 3%
				padding-left 6%
				box-sizing border-box
				background url('') left center no-repeat
				display table
				span 
					display table-cell
					vertical-align middle
	.brand-master
		padding 100px 0 40px 
		.list
			margin-left -3%
			.item
				width 30%
				margin-left 3%
				margin-bottom 30px
				height 238px
				display table
				font-size 24px
				color #ffffff
				line-height 34px
				text-align center
				box-shadow 0 0 18px rgba(#a5a4a4,0.75)
				background url('') center center no-repeat
				background-size 120% 120%
				&.cc4a66a
					color #c4a66a
				span
					display table-cell
					vertical-align middle
		.btn
			a
				display block
				margin 40px auto 0
				width 280px
				height 54px
				border 1px solid #a9a9a9
				text-align center
				line-height 54px
				font-size 18px
				color #c4a66a
	.brand-story
		padding-top 90px
		.fr
			width 310px
			.brand
				padding-bottom 120 px
				display block
				img
					width 218px
			h3
				font-size 34px
				color #998053
				line-height 44px
				position relative
				text-align right
				letter-spacing 5px
				text-transform uppercase
				font-weight normal
				&:after
					content ''
					position absolute
					right 0
					bottom -32px
					width 167px
					height 12px
					background #998053
			p
				padding-top 80px
				font-size 18px
				color #221616
				line-height 46px
			.more
				display block
				margin-top 20px
				height 54px
				border 1px solid #a9a9a9
				text-align center
				line-height 54px
				font-size 18px
				color #c4a66a
.public-page-control
	font-size 0
	text-align center
	&.p65-0-15
		padding 65px 0 15px
	a
		display inline-block
		font-size 16px
		min-width 28px
		height 28px
		margin 0 6px
		color #666666
		text-align center
		padding 0 10px
		line-height 26px
		box-sizing border-box
		border 1px solid #e9e9e9
		transition 0.3s
		&:hover
		&.active
			color #ffffff
			background #bc9f77

.public-theme-style-detalis
	h3
		padding 70px 0 20px
		text-align center
		font-weight normal
		line-height 1.5
		.en
			font-size 16px
