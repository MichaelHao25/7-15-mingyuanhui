		.cn
			font-size 18px
			color #100f10
	p
		font-size 14px
		color #443229
		font-family '宋体'
		letter-spacing 3px
		text-align center
	.pic-container
		padding 40px 0 60px
		img
			display block
			width 100%
			padding-bottom 30px
.public-page-info
	padding 30px 0 40px
	font-size 14px
	color #1f1d12
	line-height 24px
	.cc4a66a
		color #c4a66a
	a
		color inherit
.public-more-hot-theme
	h3
		text-align left
		font-weight normal
		line-height 1.5
		.en
			font-size 16px
			color #c4a66a
		.cn
			font-size 18px
			color #100f10
	.list
		padding 25px 0 75px
		margin-left -2%
	.item
		width 23% 
		margin-left 2%
		.pic
			img
				display block
				width 100%

		.content
			padding-top 25px
			color #100f11
			text-transform uppercase
			font-size 16px
			line-height 26px

			.cc4a66a
				color #c4a66a

			.ce00524
				color #e00524

			a
				color inherit
	
.public-more-option
	text-align center
	padding-bottom 50px
	a
		display inline-block
		width 280px
		height 50px
		font-size 18px
		color #998053
		text-align center
		line-height 50px
		border 1px solid #a9a9a9
		margin 0 70px

.public-quick-know-cost
	position relative
	background #221616
	height 144px
	padding-top 7px
	margin-bottom 55px
	box-sizing border-box
	.layout
		position absolute
		right 0
		top 0
		bottom 0
		img
			display block
			max-width 100%
	.row
		padding-left 100px
		padding-top 16px
		input
			width 390px
			height 45px
			background #f0dc95
			font-size 18px
			color #2a2a2a
			line-height 45px
			padding 0 20px
			outline none
			border none
			&::placeholder
				color #2a2a2a

.public-brand-title
	text-align center
	line-height 1.5
	font-weight normal
	&.p50-0
		padding 50px 0
	&.line
		padding-bottom 70px
		position relative
		&:after
			content ''
			position absolute
			bottom 40px
			height 10px
			left 50%
			width 160px
			margin-left -80px
			border-top 10px solid #c4a66a

	.cn
		font-size 27px
		color #221616
	.en
		font-size 18px
		color #c4a66a
		text-transform uppercase